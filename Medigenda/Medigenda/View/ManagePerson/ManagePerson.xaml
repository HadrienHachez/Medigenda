<Page
    x:Class="Medigenda.ManagePerson"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Medigenda"
    xmlns:autogenerator="using:AutoGenerateForm.Uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Save"     Label="Save Change"     Command="{Binding SaveButton}"/>
            <AppBarButton Icon="AddFriend"     Label="Add Worker"     Command="{Binding AddButton}"/>
            <AppBarButton Icon="Delete"  Label="Delete Worker"  Command="{Binding DeleteButton}"/>
        </CommandBar>
    </Page.BottomAppBar>
    
    <!--
        Use of AutoGenerated Forms from attribut of a Class
        
        1.Call the uft using which contains AutoGenerator from the xmlns List Above this Code
        2.Add this.Datacontext = the ViewModelPage into the xaml.cs files
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <TextBlock FontSize="20" Visibility="Visible" Margin="10" Text="Workers"/>
            <ListView
                Grid.Row="1"
                ItemsSource="{Binding WorkerListing, Mode=TwoWay}" 
                SelectedItem="{Binding SelectedWorker, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- List Content-->
                        <TextBlock Text="{Binding Last_name, Mode=TwoWay}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <!-- Form Content -->
        <Grid Grid.Column="1"  Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel  Grid.Column="0">
                
                <autogenerator:AutoGenerator x:Name="form" CurrentDataContext="{Binding SelectedWorker, Mode=TwoWay}"/>
            </StackPanel>


            <StackPanel Grid.Column="1" Margin="30">
                <TextBlock Text="Skills"/>
                <ItemsControl ItemsSource="{Binding SelectedWorker.Skills}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Service.Service_name, Mode=TwoWay}" IsChecked="{Binding HaveThisSkills }" Command="{Binding CheckCommand}"></CheckBox>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            
            </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
